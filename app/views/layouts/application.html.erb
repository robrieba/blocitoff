<!DOCTYPE html>
<html>
<head>
  <title>Blocitoff</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container-fixed welcome-background height-full">
  <ul class="nav nav-tabs">
    <div class="pull-right user-info">
      <% if user_signed_in? %>
       <%= image_tag User.avatar_url(current_user, 24), class: "gravatar profile-pic" %>
        <%= link_to current_user.email, user_path(current_user.id), class: "btn btn-default btn-sm"  %>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-default btn-sm"  %>
      <% else %>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-default btn-sm"  %> or
        <%= link_to "Sign In", new_user_session_path, class: "btn btn-default btn-sm"  %>
      <% end %>
    </div>
  </ul>

  <%= yield %>

</div>

</body>
</html>
