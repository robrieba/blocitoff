<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <h3><%= current_user.username %></h3>
      <%= image_tag User.gravatar_url(current_user, 100), class: "profile-pic" %>
      <p>
        <strong>Email Address:</strong><br />
        <%= current_user.email %>
      </p>
      <div class="form-group">
        <%= link_to 'Edit profile', edit_user_registration_path, class: "btn btn-success btn"  %>
      </div>
    </div>
    <div class="col-sm-9">
      <h3>Task List</h3>
      <table class="table table-hover table-striped">
        <col style="width:70%">
        <col style="width:15%">
        <col style="width:15%">
        <thead>
        <tr>
          <th>Task</th>
          <th>Days Left</th>
          <th>Complete?</th>
        </tr>
        </thead>

        <tbody class="js-items">
          <%= render @items %>
        </tbody>
      </table>
      <div class="new-item">
        <%= render partial: 'items/form', locals: { user: current_user, item: Item.new } %>
      </div>
    </div>
  </div>
